mixin breadcrumbs(props = {})
	+b.NAV.breadcrumbs(class=`${props.modes ? `_${props.modes.join(' _')}` : ''}`)&attributes(attributes)
		+e.wrap.wrap.flex._nowrap._vertical
			each link, index in props
				if index === props.length - 1
					+e.link #{ link.text }
				else
					+e.A.link.flex._nowrap._vertical(href=link.href) #{ link.text }
					if index !== props.length - 1
						+e.divider
							+icon(props.divider)
