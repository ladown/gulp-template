block vars
	-
		var title = title || 'Title';
		var description = description || 'Description';
		var image = image || '';
		var imgPath = './img/';
		var spritePath = './icons/sprite.svg#';

	-
		var html = {
			attrs: {
				lang: 'ru',
				dir: 'ltr'
			},
			classList: [],
		};
	-
		var body = {
			attrs: {},
			classList: [],
		};

	-
		var main = {
			attrs: {},
			classList: [],
		};
	-
		var meta = {
			charset: 'utf-8',
			description: description,
			keywords: [],
			ogTitle: title,
			viewport: 'width=device-width, initial-scale=1, viewport-fit=cover',
			XUACompatible: 'IE=edge',
			detection: 'telephone=no'
		};
	-
		var icon = {
			default: 'img/favicons/favicon.svg',
		};

include ../mixins/mixins-loader.pug

doctype html
html(class=html.classList)&attributes(html.attrs)
	head
		block head-start

		block meta
			title #{ title }

			if meta.charset
				meta(charset=meta.charset)

			if meta.XUACompatible
				meta(
					http-equiv='X-UA-Compatible'
					content=meta.XUACompatible)

			if meta.viewport
				meta(
					name='viewport'
					content=meta.viewport)

			if meta.description
				meta(
					name='description'
					content=meta.description)

			if meta.detection
				meta(
					name='format-detection'
					content=meta.detection)

			if icon
				link(
					rel='icon'
					href=icon.default
					type='image/svg+xml'
					sizes='any')

		script.
			function canUseWebP() {
				var e = document.createElement('canvas');
				return !(!e.getContext || !e.getContext('2d')) && 0 == e.toDataURL('image/webp').indexOf('data:image/webp');
			}
			var root = document.getElementsByTagName('html')[0];
			canUseWebP() ? root.classList.add('webp') : root.classList.add('no-webp');

		block styles
			link(
				href=`./css/app.css?v=${Date.now()}`
				rel='stylesheet')

		block head-end

	body(class=body.classList)&attributes(body.attrs)
		block body-start

		block header
			include header

		+b.MAIN.main-content(class=main.classList)&attributes(main.attrs)
			block content

		block footer
			include footer

		block modals
			include modals

		block scripts
			script(src=`./js/app.js?v=${Date.now()}`)

		block body-end
