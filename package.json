	"scripts": {
		"dev": "gulp default",
		"build": "yarn lint && gulp build --build",
		"zipBuild": "yarn lint && gulp zipBuild --build",
		"zipProject": "yarn lint && gulp zipProject --build",
		"deploy": "yarn lint && gulp deploy --build",
		"prettier": "prettier ./src/**/*.{scss,js,pug} --write",
		"eslint": "eslint ./src/js/**/*.js --fix",
		"stylelint": "stylelint ./src/scss/**/*.{css,sass,scss} --fix",
		"lint": "yarn prettier && yarn eslint && yarn stylelint",
		"prepare": "husky install",
		"huskySetupScript": "yarn prepare && husky add .husky/pre-commit 'yarn lint'"
	},
